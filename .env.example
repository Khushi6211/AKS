# MongoDB Configuration
MONGO_USERNAME=your_mongodb_username
MONGO_PASSWORD=your_mongodb_password
MONGO_CLUSTER_URI=your_cluster.mongodb.net
MONGO_PARAMS=/?retryWrites=true&w=majority&appName=YourApp

# JWT Secret Key (Generate a strong random key)
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your_flask_secret_key_change_this
ENVIRONMENT=production

# Frontend URL for CORS (Your Netlify URL)
FRONTEND_URL=https://arun-karyana-barara.netlify.app

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=60

# Cloudinary Configuration (for image uploads)
# Sign up at https://cloudinary.com (FREE: 25GB storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# SendGrid Configuration (for email notifications)
# Sign up at https://sendgrid.com (FREE: 100 emails/day)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@arunkaryana.com

# Sentry Configuration (for error tracking) - OPTIONAL
# Sign up at https://sentry.io (FREE: 5,000 events/month)
SENTRY_DSN=your_sentry_dsn_url
